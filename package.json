{
  "name": "technologyksa-website",
  "version": "2.0.0",
  "description": "Technology KSA - Complete Website with Real-time Publishing System",
  "main": "build-improved.js",
  "scripts": {
    "build": "node build-improved.js",
    "build:old": "node build.js",
    "build:watch": "nodemon build-improved.js",
    "serve": "npx http-server ./dist -p 8080 -o",
    "dev": "npm run build && npm run serve",
    "publish-api": "node publisher-api.js",
    "start": "concurrently \"npm run publish-api\" \"npm run serve\""
  },
  "keywords": [
    "website",
    "ssg",
    "static-site-generator",
    "arabic",
    "technology",
    "cms",
    "publisher"
  ],
  "author": "Technology KSA",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
